@model IEnumerable<Role>

<a class="btn btn-success" asp-action="Create" asp-controller="Roles">Rol Ekle</a>
<hr />

<table class="table table-sm table-bordered">
	<thead>
		@if (Model.Count() != 0)
		{
			<tr>
				<th>
					ID
				</th>
				<th>
					Rol
				</th>
				<th>
					Kullanıcılar
				</th>
				<th>

				</th>
			</tr>
		}
		
		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="4" class="text-center">
					Rol Yok
				</td>
			</tr>
		}
	</thead>
	<tbody>
		@foreach (var role in Model)
		{
			<tr>
				<td>
					@role.Id
				</td>
				<td>
					@role.Name
				</td>
				<td>
					Kullanıcı Listesi
				</td>
				<td class="d-flex">
					<a asp-action="Edit" asp-controller="Roles" asp-route-id="@role.Id" class="btn btn-primary btn-sm me-2">Edit</a>
					<form method="post" asp-controller="Roles" asp-action="Delete">
						<input type="hidden" name="Id" value="@role.Id">
						<button class="btn btn-danger btn-sm" type="submit">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>