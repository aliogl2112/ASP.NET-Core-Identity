@model EditViewModel
<form asp-controller="Users" asp-action="Edit" method="post">
	<input type="hidden" class="form-control" name="Id" value="@Model.Id" />
	<h2>Edit User</h2>
	<hr />
	<div class="text-danger" asp-validation-summary="All">

	</div>
	<div class="mb-3">
		<label asp-for="FullName">Fullname</label>
		<input asp-for="FullName" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="Email">Email</label>
		<input asp-for="Email" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="Password">Password</label>
		<input asp-for="Password" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="ConfirmPassword">Confirm Password</label>
		<input asp-for="ConfirmPassword" class="form-control" />
	</div>
	<div class="card mb-3">
		<div class="card-header">
			Roller
		</div>
		<div class="card-body">
			@foreach(var role in ViewBag.Roles)
			{
				<div class="form-chech">
					<input type="checkbox" class="form-check-input" name="" id="@role">
					<label for="@role" class="form-check-label">@role</label>
				</div>
			}
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Kaydet</button>
</form>