@model IEnumerable<User>

<a class="btn btn-success" asp-action="Create" asp-controller="Users">Create User</a>
<hr/>

<table class="table table-sm table-bordered">
	<thead>
		<tr>
			<th>
				ID
			</th>
			<th>
				Name
			</th>
			<th>
				Email
			</th>
			<th>

			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var user in Model)
		{
			<tr>
				<td>
					@user.Id
				</td>
				<td>
					@user.FullName
				</td>
				<td>
					@user.Email
				</td>
				<td>
					<a asp-action="Edit" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
					<form method="post" asp-controller="Users" asp-action="Delete">
						<input type="hidden" name="Id" value="@user.Id">
						<button class="btn btn-danger btn-sm" type="submit">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>